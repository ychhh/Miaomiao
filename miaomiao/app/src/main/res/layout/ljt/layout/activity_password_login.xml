<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgcolor"
    android:orientation="vertical"
    android:padding="10dp">

    <ImageView
        android:id="@+id/iv_rtn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:onClick="onClick"
        android:src="@drawable/left" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:layout_weight="1"
        android:text="密码登录"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/iv_clearPhone"
            android:hint="请输入手机号"
            android:textSize="23sp" />

        <ImageView
            android:id="@+id/iv_clearPhone"
            android:layout_width="33dp"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/tv_none"
            android:foregroundGravity="center_vertical"
            android:src="@drawable/clear" />

        <TextView
            android:id="@+id/tv_none"
            android:layout_width="33dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <EditText
            android:id="@+id/et_pwd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/iv_clearPwd"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:textSize="23sp" />

        <ImageView
            android:id="@+id/iv_clearPwd"
            android:layout_width="33dp"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/iv_eye"
            android:foregroundGravity="center_vertical"
            android:src="@drawable/clear" />

        <ImageView
            android:id="@+id/iv_eye"
            android:layout_width="33dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:foregroundGravity="center_vertical"
            android:src="@drawable/eye_close" />
    </RelativeLayout>


    <ImageView
        android:id="@+id/iv_login"
        android:layout_width="60dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:layout_weight="3"
        android:onClick="onClick"
        android:src="@drawable/login_main" />

    <Button
        android:id="@+id/btn_loginProblems"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="#00000000"
        android:onClick="onClick"
        android:padding="10dp"
        android:text="登录遇到问题"
        android:textColor="#99ffff"
        android:textSize="18sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="bottom">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_agree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:gravity="center_vertical"
                android:text="我已阅读并同意"
                android:textColor="#fff"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btn_showService"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:gravity="center_vertical"
                android:onClick="onClick"
                android:text="服务协议与隐私政策"
                android:textColor="#00f"
                android:textSize="18sp" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>