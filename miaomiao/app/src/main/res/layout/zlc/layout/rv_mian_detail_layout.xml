<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent">


    <!--<com.shuyu.gsyvideoplayer.video.StandardGSYVideoPlayer-->

    <!--android:id="@+id/videoPlayer"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"/>-->


    <com.hbsd.rjxy.miaomiao.zlc.vedio.presenter.MeGSYVideoPlayer
        android:id="@+id/videoPlayer"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <ImageView
        android:id="@+id/iv_thumb"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitCenter" />


    <com.hbsd.rjxy.miaomiao.utils.CircleImageView
        android:id="@+id/iv_cathead"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="right"
        android:layout_marginTop="250dp"
        android:layout_marginRight="5dp"
        android:scaleType="centerCrop"
        android:src="@drawable/catheadtest" />

    <ImageView
        android:id="@+id/iv_feed"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="right"
        android:layout_marginTop="350dp"
        android:layout_marginRight="7dp"
        android:src="@drawable/feed" />

    <TextView
        android:id="@+id/tv_video_fish"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="390dp"
        android:layout_marginRight="7dp"
        android:gravity="center"
        android:text="0"
        android:textColor="@color/colorPrimary"
        android:textSize="20dp" />


    <ImageView
        android:id="@+id/iv_subscribe"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="right"
        android:layout_marginTop="420dp"
        android:scaleType="fitCenter"
        android:src="@drawable/subscribe"
        android:visibility="invisible" />


    <FrameLayout
        android:layout_width="50dp"
        android:layout_height="80dp"
        android:layout_gravity="right"
        android:layout_marginTop="500dp"
        android:layout_marginRight="7dp"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/iv_comment"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitCenter"
            android:src="@drawable/comment" />

        <TextView
            android:id="@+id/tv_comment_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/colorPrimary"
            android:textSize="20dp" />


    </FrameLayout>


    <TextView
        android:id="@+id/tv_videocontent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="50dp"
        android:ellipsize="marquee"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:text="我是内容"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold" />


    <com.hbsd.rjxy.miaomiao.zlc.vedio.presenter.PopFish
        android:id="@+id/popFish"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/iv_subscribe_plus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="297dp"
        android:layout_marginRight="22dp"
        android:src="@drawable/subscribe_plus" />

    <ImageView
        android:visibility="invisible"
        android:id="@+id/iv_subscribe_success"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="297dp"
        android:layout_marginRight="20dp"
        android:src="@drawable/subscribe_success" />


</FrameLayout>


