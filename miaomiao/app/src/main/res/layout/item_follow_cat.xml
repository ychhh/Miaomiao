<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000218"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="100dp">
        <com.hbsd.rjxy.miaomiao.utils.CircleImageView
            android:id="@+id/img_chead"
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:src="@drawable/u45"
            android:layout_margin="20dp" />

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_cname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="官方小助手"
                android:textSize="20dp"
                android:singleLine="true"
                android:ellipsize="end"/>
            <TextView
                android:id="@+id/tv_cintro"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="我是官方小助手，欢迎关注"
                android:textSize="16dp"
                android:singleLine="true"
                android:ellipsize="end"/>
        </LinearLayout>
        <Button
            android:id="@+id/btn_unfollow"
            android:text="取消关注"
            android:layout_width="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>